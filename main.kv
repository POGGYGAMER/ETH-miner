BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    ScrollView:
        size_hint: (1, 0.7)
        TextInput:
            id: result_box
            readonly: True
            background_color: (0.18, 0.18, 0.18, 1)
            foreground_color: (1, 1, 1, 1)
            text: ''
            font_size: '14sp'

    TextInput:
        id: status_box
        readonly: True
        size_hint: (1, 0.1)
        background_color: (1, 0.75, 0.07, 1)
        foreground_color: (0, 0, 0, 1)
        font_size: '18sp'
        text: ''

    Label:
        id: counter_label
        text: "Phrases Generated: 0"
        size_hint: (1, 0.1)
        font_size: '16sp'

    BoxLayout:
        size_hint: (1, 0.2)
        spacing: 10

        Button:
            text: "Start"
            background_color: (0.3, 0.7, 0.3, 1)
            on_press: app.start(self)

        Button:
            text: "Stop"
            background_color: (0.9, 0.3, 0.3, 1)
            on_press: app.stop(self)

        Button:
            text: "Restart"
            background_color: (0.2, 0.6, 1, 1)
            on_press: app.restart(self)

        Button:
            text: "Save"
            background_color: (1, 0.76, 0.07, 1)
            on_press: app.save_phrases(self)